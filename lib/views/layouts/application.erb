<% if session[:flash] %>
  <%= session[:flash] %>
  <% session[:flash].clear %>
<% end %>

<% if current_user %>
  <%= current_user.email %>
  <%= link_to 'Log out', '/users/logout' %>
<% else %>
  <%= link_to 'Log in', '/users/login' %>
  <%= link_to 'Register', '/users/register' %>
<% end %>

<%= yield %>
